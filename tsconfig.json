{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "importHelpers": true,
        "jsx": "react",
        "esModuleInterop": true,
        "sourceMap": true,
        "baseUrl": "./",
        "strict": true,
        "paths": {
            "@/*": ["src/*"]
        },
        "allowSyntheticDefaultImports": true
    }
}
